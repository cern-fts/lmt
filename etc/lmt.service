[Unit]
Description=Last Mile Transfer proxy Service
Requires=network-online.target
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/sbin/lmt -conf /etc/lmt/config.yml -p 80
KillMode=process
KillSignal=SIGTERM
SendSIGHUP=no
SendSIGKILL=yes
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target

